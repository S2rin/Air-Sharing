<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:background="#99ccff"
        android:weightSum="1">

        <ImageView
            android:layout_width="100px"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="390px"
            android:layout_weight="0.09"
            android:src="@drawable/cloud" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="AIRSHARING"
            android:textColor="#ffffff"
            android:textSize="80px"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/location" />

            <TextView
                android:id="@+id/realocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경기도 성남시 수정구 복정동 성남대로 1342"
                android:textColor="@color/colorBlack"
                android:textSize="6pt" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="실시간 공기 상태"
            android:textColor="@color/colorBlack"
            android:textSize="13pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <Button
                android:id="@+id/home_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="9pt"
                android:background="@drawable/circle"
                android:clickable="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="나쁨"
                        android:textColor="#000000"
                        android:textSize="7pt" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/green" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="보통"
                        android:textColor="#000000"
                        android:textSize="7pt" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="좋음"
                        android:textColor="#000000"
                        android:textSize="7pt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="37dp"
                        android:layout_height="31dp"
                        android:src="@drawable/thermometer" />

                    <TextView
                        android:id="@+id/temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="온도: 0℃"
                        android:textColor="#000000"
                        android:textSize="7pt" />

                    <ImageView
                        android:layout_width="29dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/humi" />

                    <TextView
                        android:id="@+id/humi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="습도: 0%"
                        android:textColor="#000000"
                        android:textSize="7pt" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="CO"
                    android:textColor="#000000"
                    android:textSize="9pt" />

                <Button
                    android:id="@+id/btn_co"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cobutton"
                    android:clickable="false"
                    android:text="0 ppm"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="9pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="CO2"
                    android:textColor="#000000"
                    android:textSize="9pt" />

                <Button
                    android:id="@+id/btn_co2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/co2button"
                    android:clickable="false"
                    android:text="0 ppm"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="9pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="O2"
                    android:textColor="#000000"
                    android:textSize="9pt" />

                <Button
                    android:id="@+id/btn_o2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/o2button"
                    android:clickable="false"
                    android:text="0 %"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="9pt" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="미세먼지"
                    android:textColor="#000000"
                    android:textSize="8pt" />

                <Button
                    android:id="@+id/btn_dust"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dust"
                    android:clickable="false"
                    android:text="0 µg/m3"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="8pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="초미세먼지"
                    android:textColor="#000000"
                    android:textSize="8pt" />

                <Button
                    android:id="@+id/btn_microdust"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/micro_dust"
                    android:clickable="false"
                    android:text="0 µg/m3"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="8pt" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp">

            <Button
                android:id="@+id/btn_airRequest"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/button4"
                android:text="공기 측정하기"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/button_gray"
                android:text="@string/home"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/dashboard"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/button_gray"
                android:text="@string/dashboard"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/map"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/button_gray"
                android:text="@string/map"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/community"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/button_gray"
                android:text="@string/community"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/button_gray"
                android:text="@string/setting"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>